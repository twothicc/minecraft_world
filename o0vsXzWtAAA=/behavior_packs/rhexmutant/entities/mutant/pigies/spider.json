{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "rhex:spider_pig",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:spider", 
      "scripts": {
        "animate": [
"charge",
"remove_charge"      
        ]
      },
      "animations": {
"charge": "controller.animation.sp_charge",
"remove_charge": "controller.animation.removesp_charge"        
      }
    },


    "component_groups": {
    "charge":{
    "minecraft:area_attack" : {
          "damage_range": 2.5,
          "damage_per_tick": 2.0,
          "cause": "contact",
          "entity_filter": {
            "all_of": [
		    { "test": "is_family", "subject": "other", "operator": "!=", "value": "rhexsp" }
		  ]
        }
      }
    },
      

      "minecraft:spider_calm": {
        "minecraft:movement": {
        "value": 0.35
      },
        "minecraft:on_target_acquired": {
          "event": "minecraft:become_angry"
        }
      },
        

      "minecraft:spider_angry": {
        "minecraft:on_target_escape": {
        "event": "minecraft:become_calm"
      },
        "minecraft:movement": {
        "value": 0.5
      }
      }
    },

    "components": {
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 5 : 0"
      },
      "minecraft:behavior.summon_entity": {
        "priority": 1,
        "summon_choices": [
          {
            "weight": 100,
            "cooldown_time": 89,
            "cast_duration": 0,
            "sequence": [
              {
                "target": "target",
                "base_delay": 0,
                "num_entities_spawned": 1,
                "entity_type": "rhex:spweb",
                "size": 0.0,
                "entity_lifespan": 0.1
              }
            ]
          }
        ]
      },
      "minecraft:behavior.stalk_and_pounce_on_target": {
                "priority": 1,
                "stalk_speed": 2,
                "max_stalk_dist": 5.5,
                "leap_height": 0.50,
                "leap_dist": 0.70,
                "pounce_max_dist": 4.5,
                "strike_dist": 5.5,
                "interest_time": 0.0001
                
				},
        "minecraft:behavior.leap_at_target": {
          "priority": 2,
          "yd": 0.4,
          "must_be_on_ground": false
        },
        
        "minecraft:behavior.melee_attack": {
          "priority": 2,
          "track_target": true,
          "reach_multiplier": 1.15,
          "speed_multiplier": 1.5
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 1,
          "must_see": true,
          "attack_interval": 5,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
"test":"has_tag","subject":"other","operator":"==","value":"target"
},
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "snowgolem"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "irongolem"
                  }
                ]
              },
              "max_dist": 32
            }
          ]
      },
      "minecraft:nameable": {
      },
      "minecraft:type_family": {
        "family": [ "rhexsp", "spider", "monster", "mob", "arthropod" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/spider.json"
      },
      "minecraft:collision_box": {
        "width": 1.4,
        "height": 0.9
      },
      "minecraft:health": {
        "value": 45,
        "max": 45
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      
      "minecraft:navigation.climb": {
        "can_path_over_water": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:follow_range": {
        "value": 40,
        "max": 40
      },
      "minecraft:spell_effects": {
          "add_effects": [
            {
              "effect": "resistance",
              "amplifier": 1,
              "visible": false,
              "ambient": false,
              "duration": 999999
            }
          ]
          },
          "minecraft:boss": {
        "name":"§4§LSPIDER PIG",
        "should_darken_sky": false,
        "hud_range": 14
      },
      "minecraft:attack": {
          "damage": 6,
          "effect_name": "slowness",
          "effect_duration": 7
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.float": {
        "priority": 1
      },
      "minecraft:behavior.mount_pathing": {
        "priority": 5,
        "speed_multiplier": 1.25,
        "target_dist": 0.0,
        "track_target": true
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6.0,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:rideable": {
        "seat_count": 1,
        "family_types": [
          "zombie"
        ],
        "seats": {
          "position": [ 0.0, 0.54, -0.1 ]
        }
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      }
    },

    "events": {
      "charge": {
        "add": {
          "component_groups": [
            "charge"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "minecraft:spider_calm"
          ]
        }
      },
      "remove_charge": {
        "remove": {
          "component_groups": [
            "charge"
          ]
        }
      },
      

      "minecraft:become_hostile": {
        "remove": {
          "component_groups": [
            "minecraft:spider_neutral"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:spider_hostile"
          ]
        }
      },

      "minecraft:become_neutral": {
        "remove": {
          "component_groups": [
            "minecraft:spider_hostile"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:spider_neutral"
          ]
        }
      },

      "minecraft:become_angry": {
        "add": {
          "component_groups": [
            "minecraft:spider_angry"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:spider_calm"
          ]
        }
      },
      "minecraft:become_calm": {
        "remove": {
          "component_groups": [
            "minecraft:spider_angry"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:spider_calm"
          ]
        }
      }
    }
  }
}