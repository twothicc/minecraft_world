      "loop": true,
      "override_previous_animation": true,
      "bones": {
        "root": {
          "position": [ 0, -8, 0 ]
        },
        "RightLeg": {
          "rotation": [ -72, 18, 0 ]
        },
        "LeftLeg": {
          "rotation": [ -72, -18, 0 ]
        }
      }
    },
    "animation.cmm.creeper.swelling": {
      "loop": true,
      "bones": {
        "Head": {
          "scale": [
            "variable.swelling_scale1 * variable.wobble",
            "variable.swelling_scale2 / variable.wobble",
            "variable.swelling_scale1 * variable.wobble"
          ]
        },
        "Neck": {
          "scale": [
            "variable.swelling_scale1 * variable.wobble",
            "variable.swelling_scale2 / variable.wobble",
            "variable.swelling_scale1 * variable.wobble"
          ]
        },
        "root": {
          "scale": [
            "variable.swelling_scale1 * variable.wobble",
            "variable.swelling_scale2 / variable.wobble",
            "variable.swelling_scale1 * variable.wobble"
          ]
        }
      }
    }
  }
