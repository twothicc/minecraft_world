{
    "namespace": "debug_screen",
    "access_button@common_buttons.light_content_button": {
        "$pressed_button_name": "button.access",
        "size": [20, 20],
        "offset": [20, 20],
        "anchor_to": "top_left",
        "anchor_from": "top_left",
        "bindings": [{
                "binding_name": "#access_screen_visible",
                "binding_name_override": "#visible"
            }
        ]
    },
    "rhex_watermark": {
        "type": "label",
        "text": "\n§l§bMUTANT CREATURE §r\nMade by §bRHEX MCPE\n§rCredit to §bJUJUSTYLE7",
        "color": [1.0, 1.0, 1.0],
        "shadow": true,
        "font_size": "tiny",
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "alpha": 10
    },
    "rhex_watermark_image": {
        "type": "image",
        "texture": "textures/rhex",
        "layer": 3,
        "offset": [-110, 3],
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "size": [16, 16]
    },
    "special_render": {
        "type": "custom",
        "renderer": "debug_screen_renderer"
    },
    "content_panel": {
        "type": "panel",
        "clips_children": false,
        "size": ["100%", "100%"],
        "controls": [{
                "access_button@debug_screen.access_button": {}
            }, {
                "special_render@debug_screen.special_render": {}                               //credit to Ash Pixelpoly for the watermark code
            }, {
                "rhex_watermark@debug_screen.rhex_watermark": {}
            }, {
                "rhex_watermark_image@debug_screen.rhex_watermark_image": {}
            }
        ]
    },
    "debug_screen@common.base_screen": {
        "send_telemetry": false,
        "screen_not_flushable": true,
        "render_game_behind": true,
        "is_showing_menu": false,
        "low_frequency_rendering": true,
        "is_modal": true,
        "should_steal_mouse": false,
        "render_only_when_topmost": false,
        "screen_draws_last": true,
        "always_accepts_input": true,
        "$screen_content": "debug_screen.content_panel",
        "$screen_animations": [],
        "$use_loading_bars": false
    }
}