{
  "format_version":"1.8.0",
  "render_controllers": {
    "controller.render.mearmor": {
      "geometry": "Geometry.armor",
      "part_visibility": [
        { "*": "query.is_sheared" }
      ],
      "materials": [ { "*": "Material.armor" } ],
      "textures": [ "Texture.armor" ],
      "overlay_color": {
        "r": 1.0,
        "g": 1.0,
        "b": 1.0,
        "a": 1.0
      },
      "uv_anim": {
        "offset": [ "(query.is_sheared) ? (Math.floor(query.life_time * 20.0) + query.frame_alpha) * 0.01 : 0.0", 
        "(query.is_sheared) ? (Math.floor(query.life_time * 20.0) + query.frame_alpha) * 0.01 : 0.0" ],
        "scale": [ 1.0, 1.0 ]
      },
      "light_color_multiplier": 0.5,
      "ignore_lighting" : true
    }
  }
}